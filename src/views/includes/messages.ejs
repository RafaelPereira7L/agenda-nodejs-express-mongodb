<% if(errors.length > 0) { %>
<div class="row">
    <div class="col my-3">
      <div class="alert alert-danger">
          <% errors.forEach(erro => { %>
              <%= erro %><br>
            
            <% }); %>
      </div>
    </div>
  </div>
<% } %>

<% if(success.length > 0) { %>
  <div class="row">
      <div class="col my-3">
        <div class="alert alert-success">
            <% success.forEach(sucess => { %>
                <%= success %><br>
              
              <% }); %>
        </div>
      </div>
    </div>
  <% } %>

  <% if(successDelete.length > 0) { %>
    <div class="row">
        <div class="col my-3">
          <div class="alert alert-primary">
              <% successDelete.forEach(sucess => { %>
                  <%= successDelete %><br>
                
                <% }); %>
          </div>
        </div>
      </div>
    <% } %>
